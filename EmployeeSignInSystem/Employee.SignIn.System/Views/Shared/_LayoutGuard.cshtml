<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeSignIn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Employee" asp-action="SignIn">Employee Signing System</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ">
                                <i class="fa-solid fa-user"></i>
                                <a class="nav-link text-dark" style="color:orangered;">@User.Identity?.Name</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        </ul>
                        <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (ViewBag.CurrentUrl == "~/Guard/GetBadgeQueue")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" style="background-color:mediumseagreen; text-decoration:underline"  asp-area="" asp-controller="Guard" asp-action="GetBadgeQueue">Badge Queue</a>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Guard" asp-action="GetBadgeQueue">Badge Queue</a>
                                </li>
                            }

                            @if (ViewBag.CurrentUrl == "~/Guard/GetAssignedBadges")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" style="background-color:mediumseagreen; text-decoration:underline" asp-area="" asp-controller="Guard" asp-action="GetAssignedBadges">Badge Out</a>
                                    </li>
                                
                            }
                            else{
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Guard" asp-action="GetAssignedBadges">Badge Out</a>
                                    </li>
                            }
                            @if (ViewBag.CurrentUrl == "~/Guard/GetReport")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" style="background-color:mediumseagreen; text-decoration:underline" asp-area="" asp-controller="Guard" asp-action="GetReport">Report</a>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Guard" asp-action="GetReport">Report</a>
                                    </li>
                            }
                        }
                        else
                        {                                                                            
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Guard Login</a>
                             </li>                                                               
                        }
                    </ul>
                   
                       
                </div>
              @*  <div class="flex-grow-1 pr" >
                    <div class="navbar account-links">
                     <ul>
                         <li class="nav-item">
                             <a class="nav-link text-dark" style="float:right">@User.Identity?.Name</a>
                          </li>
                     </ul>   
                    
                    </div>
                </div>*@
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EmployeeSignIn - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
